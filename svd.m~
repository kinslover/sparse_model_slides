n = 10;
lambda = 0.1;

X = normrnd(0, 1, n, 2);

X_c = X - repmat(sum(X), n, 1);

y = X

[U, D, V] = svd(X_c, 'econ');

U' * U
%subplot(1, 2, 1)
plot(XX(:, 1), XX(:, 2), 'xr')
%subplot(1, 2, 2)
hold on
plot(XX(:, 1) * D(1,1)^2/(D(1,1)^2 + lambda), XX(:, 2)* D(2,2)^2/(D(2,2)^2 + lambda), 'ob')
hold off